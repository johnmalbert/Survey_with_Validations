<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>Dojo Survey</title>
</head>
@using Dojo_Survey_Validations.Models
@model Survey
@{  
    string[] Cities = {"Seattle", "Bellevue", "Online"}; 
    string[] Langs = {"Python", "C#", "Mern"}; 
}

<body>
    <div class="container p-5">
        <h1 style="text-align: center;">Dojo Survey</h1>
        <div class="row">
            <div class="col border p-5">
                <form asp-action="survey" asp-controller="Home" method="POST">
                    <div class="form-group">
                        <span asp-validation-for="Name"></span>
                        <br>
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Location"></span>
                        <br>
                    <label class="my-1 mr-2" asp-for="Location"></label>
                    <select class="custom-select my-1 mr-sm-2" asp-for="Location">
                        <option disabled selected>Select a City</option>
                        @foreach (var item in Cities)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Lang"></span>
                        <br>
                    <label asp-for="Lang" class="my-1 mr-2">Favorite Language</label>
                    <select asp-for="Lang" class="custom-select my-1 mr-sm-2">
                        <option disabled selected>Select a Language</option>
                        @foreach (var item in Langs)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Comment"></span>
                        <br>
                        <label asp-for="Comment"></label>
                        <textarea  asp-for="Comment" class="form-control" rows="3" placeholder="Your Comment Here (Optional)"></textarea>
                    </div>
                    <button class = "btn btn-primary" type="submit">Submit</button>
                </form>
            </div>
        </div>
        <div class="col text-center">
            <a href="/"><button class="btn btn-primary mt-3">Clear Fields</button></a>
        </div>
    </div>
</body>

</html>